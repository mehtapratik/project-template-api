{
   "name": "project-template-api",
   "version": "0.0.1",
   "description": "Empty project template for API based web service development using Node.js and Express",
   "main": "dist/server.js",
   "directories": {
      "doc": "docs"
   },
   "scripts": {
      "cleanup": "rimraf ./dist",
      "babel": "babel ./src -d ./dist",
      "lint": "eslint src/server.js",
      "build": "npm-run-all --serial lint cleanup babel",
      "dev": "npm run lint && babel-node ./src/server.js",
      "start": "nodemon --watch ./src --exec npm run dev",
      "test": "echo \"Error: TODO Soon\""
   },
   "repository": {
      "type": "git",
      "url": "git+https://github.com/mehtapratik/project-template-api.git"
   },
   "author": "Pratik Mehta",
   "license": "MIT",
   "bugs": {
      "url": "https://github.com/mehtapratik/project-template-api/issues"
   },
   "homepage": "https://github.com/mehtapratik/project-template-api#readme",
   "dependencies": {
      "body-parser": "1.19.0",
      "core-js": "3.2.1",
      "cors": "2.8.5",
      "express": "4.17.1",
      "morgan": "1.9.1",
      "regenerator-runtime": "0.13.3"
   },
   "devDependencies": {
      "@babel/cli": "^7.6.0",
      "@babel/core": "^7.6.0",
      "@babel/node": "^7.6.1",
      "@babel/preset-env": "^7.6.0",
      "eslint": "^6.3.0",
      "eslint-config-prettier": "6.2.0",
      "eslint-plugin-prettier": "3.1.0",
      "localtunnel": "^1.9.2",
      "nodemon": "^1.19.2",
      "npm-run-all": "^4.1.5",
      "prettier": "1.18.2",
      "rimraf": "^3.0.0"
   },
   "prettier": {
      "trailingComma": "none",
      "tabWidth": 3,
      "semi": true,
      "singleQuote": true,
      "quoteProps": "preserve",
      "endOfLine": "lf",
      "printWidth": 140,
      "parser": "babel"
   },
   "eslintConfig": {
      "env": {
         "es6": true,
         "node": true
      },
      "extends": [
         "plugin:prettier/recommended",
         "eslint:recommended"
      ],
      "globals": {
         "Atomics": "readonly",
         "SharedArrayBuffer": "readonly"
      },
      "parserOptions": {
         "ecmaVersion": 2018,
         "sourceType": "module"
      }
   },
   "babel": {
      "presets": [
         [
            "@babel/preset-env",
            {
               "useBuiltIns": "usage",
               "corejs": {
                  "version": 3,
                  "proposals": true
               }
            }
         ]
      ]
   }
}
